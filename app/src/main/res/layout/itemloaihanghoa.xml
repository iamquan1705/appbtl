<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/background_item"
    android:paddingRight="10dp"
    >
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/merchandise"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tvTenLoaiHangItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên Bộ Phận:"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:textSize="17dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvGhiChuItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ghi chú:Đây là loại mặt hàng chuyên dùng cho tiêu dùng hằng ngày"
        android:textAllCaps="true"
        android:layout_marginLeft="110dp"
        android:textSize="17dp"
        android:textColor="#ffffff"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/tvTenLoaiHangItem"
        app:layout_constraintTop_toBottomOf="@id/tvTenLoaiHangItem"
        />
</androidx.constraintlayout.widget.ConstraintLayout>