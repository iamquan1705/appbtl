<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background1"
    tools:context="com.lehoanghiep.activity.Lehoanghiep_ActivityThemloaihang">
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:gravity="center"
        android:background="@drawable/vien"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="THÊM LOẠI HÀNG HÓA"
            android:textSize="25dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center"
            />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập tên loại hàng hóa">
                <EditText
                    android:id="@+id/edtTenLoaiHangThem"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập ghi chú">
                <EditText
                    android:id="@+id/edtGhiChuThem"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">
            <android.widget.Button
                android:id="@+id/btnLoaiHangThem"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_button2"
                android:text="Thêm"
                android:textColor="#ffffff"
                />
            <android.widget.Button
                android:id="@+id/btnThoatLoaiHangThem"
                android:layout_marginLeft="20dp"
                android:text="Thoát"
                android:background="@drawable/background_button2"
                android:layout_width="150dp"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>